<div id="{{productId}}" class='success-page assetList'> 
	{{#if handover}}
	<p><b>{{title}}</b> has been successfully handed over to <b>{{senderName}}</b></p>
	{{else}}
	<p><b>{{title}}</b> has been successfully added!</p>
	<button class="btn btn-large bg-navbar modal-trigger" href="#modal1" id="addAsset">Initiate Handover</button>
	{{/if}}
	{{!-- <button class="btn btn-lg black" id='goToHomePage' name='close'> Take ME TO HOME </button> --}}
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
	<div class="modal-content">
  		<p>Are you a shipper or a receiver?</p>
	</div>
	<div class="modal-footer">
	  <a class="modal-close btn-flat blue-text" id="shipper">Shipper</a>
	  <a class="modal-close btn-flat blue-text" id="receiver">Receiver</a>
	</div>
</div>